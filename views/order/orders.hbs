{{#each orderDetails}}
<div class="container-fluid mb-2 py-3 z-depth-1 order-details">
    <!--Section: Main panel-->
    <!-- Section: Block Content -->
    <section>

        <!--Grid row -->
        <div class="row justify-content-between rounded bg-light mx-1">

            <!--Grid column-->
            <div class="col-xs-6 col-sm-6 col-md-4 col-lg-2">
                <div class="media text-center">
                    <i class="fas fa-map-marker-alt  fa-3x  p-1 rounded-left text-white mr-1"></i>
                    <div class="media-body py-1 ">
                        <p class="text-capitalize text-muted mb-1"><small>{{address}}</small></p>
                        {{!-- <p class="text-uppercase text-muted mb-1"><small>Hi-Light</small></p> --}}
                        {{!-- <h5 class="font-weight-bold mb-0">2</h5> --}}
                    </div>
                </div>
            </div>


            <div class="col-xs-6 col-sm-3 col-md-4 col-lg-2">
                <div class="media text-center ">
                    <div class="media-body py-3">
                        <h6 class="text-uppercase ">{{name}}</h6>
                    </div>
                </div>
            </div>

            <div class="col-xs-6 col-sm-3 col-md-4 col-lg-2">
                <div class="media text-center ">
                    <div class="media-body py-2">
                        <h6 class="text-uppercase ">Created On</h6>
                        <p class="text-lowercase text-muted mb-0"><small>{{date}}</small></p>
                    </div>
                </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3">
                <div class="media  text-center">
                    <!-- <i class="fas fa-download fa-lg pink z-depth-1 p-4 rounded-left text-white mr-3"></i> -->
                    <div class="media-body p-3 text-center">

                        <select class="custom-select custom-select-sm">

                            <option value="">Select One</option>
                            {{#each ../orderState as |value key|}}
                            <option value="{{value}}" {{#if (eqIf value ../status) }} selected {{/if}}>{{key}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

            </div>
            {{!-- <div class="col-xs-6 col-sm-6 col-md-4 col-lg-2 ">
                <div class="media  text-center">
                    <div class="media-body p-1">
                        <a href="" class="btn btn-success btn-rounded ">Submit
                        </a>
                    </div>
                </div>
            </div> --}}
            <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3 ">
                <div class="media  text-center">
                    {{!-- <div class="media-body p-1">
                        <a href="" class="btn btn-success btn-rounded ">Submit
                        </a>
                    </div> --}}
                    <div class="media-body p-1">
                        <a id="{{id}}" class="btn btn-success btn-rounded btn-md py-2 btn-sub">Submit
                        </a>
                        <a id="{{id}}" data-userId="{{userId}}"
                            class="btn btn-info btn-rounded btn-md py-2 btn-view">View
                        </a>
                    </div>
                </div>
            </div>
            <!--Grid column-->
        </div>
        <!--Grid row-->
    </section>
    <section>
        <div class="row ">
            <div class="col-xs-12  col-md-8 ">
                <table class="table table-borderless ">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Unit</th>
                            <th>X</th>
                            <th>Qty</th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}

                        <tr>
                            <td class="py-0">{{name}}</td>
                            <td class="py-0">{{weight}}.{{measure}}</td>
                            <td class="py-0">X</td>
                            <td class="py-0">{{quantity}}</td>

                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="col-xs-12  col-md-4  ">
                <div class="row">
                    <div class="col-6">
                        <p>Total Cost</p>

                    </div>
                    <div class="col-6">
                        <p>Rs.&nbsp;{{totalPrice}}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <p>Total Item</p>

                    </div>
                    <div class="col-6">
                        <p>{{totalQuantity}}</p>
                    </div>
                </div>
            </div>
        </div>


    </section>
    <!-- Section: Block Content -->
</div>
{{/each}}



