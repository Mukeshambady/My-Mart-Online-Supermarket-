<div class="container pt-5">
    <div class="page-header mt-5 my-2">
        <h1>Product <small>Details</small></h1>
    </div>
    <hr>
    <div class="row">


        <!--Grid column-->
        {{#each products}}
        <div class="col-lg-3 col-md-6 mb-4">

            <!--Card-->
            <div class="card card-ecommerce">

                <!--Card image-->
                <div class="view overlay ">
                    <span class="text-center">
                        <img src="../../products-pic/{{this.productImage}} " class="mx-auto d-block" height="160px"
                            alt="Product Image">
                    </span>
                    <a>
                        <div class="mask rgba-white-slight waves-effect waves-light"></div>
                    </a>
                </div>
                <!--Card image-->

                <!--Card content-->
                <div class="card-body">
                    <!--Category & Title-->

                    <h5 class="card-title mb-1">
                        <strong>
                            <a class="dark-grey-text text-uppercase product-name ">{{this.name}}</a>

                        </strong>
                    </h5>
                    <p class="category small">{{this.category}} </p>
                    <span class="badge badge-default mb-2"> <b
                            class="qty mr-1">{{this.weight}}</b>{{this.measure}}</span>
                    <!-- Inline level -->
                    <p> <span class="d-inline-block text-truncate" style="max-width: 150px;">
                            Praeterea iter est quasdam res quas ex communi.
                        </span></p>
                    <!--Card footer-->
                    <div class="card-footer pb-0">
                        <div class="row mb-0">
                            <span class="float-left">
                                <strong><span class="price">{{this.price}}</span> &nbsp;.Rs</strong>
                            </span>
                            <span class="float-right">
                                <a class="add-to-cart" data-id="{{this._id}}" data-toggle="tooltip" title="Add to cart"
                                    data-placement="top" data-original-title="Add to Cart">
                                    <i class="fas fa-shopping-cart ml-3"></i>
                                </a>
                            </span>
                        </div>
                    </div>

                </div>
                <!--Card content-->

            </div>
            <!--Card-->

        </div>
        {{/each}}
        <!--Grid column-->


    </div>

</div>

